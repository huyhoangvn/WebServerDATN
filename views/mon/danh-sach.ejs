            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Món</a></li>
              <li class="breadcrumb-item active">Danh sách</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->
        <form action="/mon/danh-sach" method="GET">
          <!-- tìm theo tên món và tên cửa hàng -->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-6">
              <input type="text" id="searchMon" class="form-control" name="tenMon"
                placeholder="Nhập tên món để tìm kiếm">
            </div>
            <div class="col-6">
              <input type="text" id="searchCuaHang" class="form-control" name="tenCH"
                placeholder="Nhập tên của hàng để tìm kiếm">
            </div>
          </div>

          <!-- tìm theo tên loại món, trạng thái, giá tiền -->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-6">
              <input type="text" class="form-control" name="tenLM" placeholder="Nhập tên loại món để tìm kiếm">
            </div>

            <div class="col-2">
              <select class="form-control" id="searchGiaTien" name="giaTien">
                <option value="0">Tất cả giá tiền</option>
                <option value="1">1000000đ</option>
                <option value="2"> 2000000đ</option>
              </select>
            </div>

            <div class="col-2">
              <select class="form-control" id="searchTrangThai" name="trangThai">
                <option value="-1">Tất cả trạng thái</option>
                <option value="1">Hoạt động</option>
                <option value="0">Khóa</option>
              </select>
            </div>

            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
          </div>
        </form>



        <!-- Bảng hiển thị -->
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tên món</td>
              <td scope="col-2">Loại món</td>
              <td scope="col-2">Cửa hàng</td>
              <td scope="col-2">Giá tiền</td>
              <td scope="col-2">Trạng thái</td>
              <td scope="col-1">Chức năng</td>
            </tr>
          </thead>
          <tbody>
            <% for (var i=0; i<data.length; i++) {%>
              <tr>
                <td scope="col-1">
                  <%=i+1%>
                </td>
                <td scope="col-2">
                  <%=data[i].tenMon%>
                </td>
                <td scope="col-2">
                  <%=data[i].tenLM%>
                </td>
                <td scope="col-2">
                  <%=data[i].tenCH%>
                </td>
                <td scope="col-1">
                  <%=data[i].giaTien.toLocaleString()%>đ
                </td>
                <td class="text-primary scope-col-2">
                  <a data-toggle="modal" data-target="#suaTrangThaiModal"
                    class=" <%= data[i].trangThai ? 'text-success' : 'text-danger' %>" data-idmon="<%=data[i].idMon%>"
                    data-trangthai="<%=data[i].trangThai%>">
                    <%= data[i].trangThai ? 'Hoạt động' : 'Khóa' %>
                  </a>
                </td>

                <td class="text-primary" scope="col-1">
                  <a href="/mon/chi-tiet/<%=data[i].idMon%>">Chi tiết</a>
                </td>
              </tr>
              <%}%>
          </tbody>
        </table>

        <!-- Modal Sửa Trạng Thái -->
        <div class="modal fade" id="suaTrangThaiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa Trạng Thái</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formSuaTrangThai" action="/mon/xoa/data[i].idMon" method="get">
                  <div class="form-group">
                    <label for="trangThai">Bạn có muốn sửa trạng thái không?</label>
                  </div>
                  <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary col-3" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary col-3">Xác nhận</button>
                  </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Phân trang hiển thị-->
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% for (var i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?trang=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>
