  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )

    // Hàm để trích xuất các tham số từ URL
    function getUrlParameter(name) {
      name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
      var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
      var results = regex.exec(location.search);
      return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
    }

    // Hàm để điền lại các trường trong form từ các tham số trong URL
    function fillFormFieldsFromURL() {
      var tenMon = getUrlParameter('tenMon') || '';
      var tenCH = getUrlParameter('tenCH') || '';
      var tenLM = getUrlParameter('tenLM') || '';
      var giaTien = getUrlParameter('giaTien') || '0'; // Mặc định là '0' nếu không có giá trị trong URL
      var trangThai = getUrlParameter('trangThai') || '-1'; // Mặc định là '-1' nếu không có giá trị trong URL

      // Gán giá trị cho các trường trong form
      document.getElementById('searchMon').value = tenMon;
      document.getElementById('searchCuaHang').value = tenCH;
      document.getElementsByName('tenLM')[0].value = tenLM;

      // Duyệt qua tất cả các option trong select giaTien và trangThai để thiết lập selected cho option tương ứng
      var giaTienSelect = document.getElementsByName('giaTien')[0];
      var trangThaiSelect = document.getElementsByName('trangThai')[0];

      for (var i = 0; i < giaTienSelect.options.length; i++) {
        if (giaTienSelect.options[i].value === giaTien) {
          giaTienSelect.options[i].selected = true;
        }
      }

      for (var j = 0; j < trangThaiSelect.options.length; j++) {
        if (trangThaiSelect.options[j].value === trangThai) {
          trangThaiSelect.options[j].selected = true;
        }
      }
    }

    // Gọi hàm fillFormFieldsFromURL() khi trang được tải
    window.onload = function () {
      fillFormFieldsFromURL();
    };
    $(document).ready(function () {
      $('a[data-target="#suaTrangThaiModal"]').on('click', function () {

        var idMon = $(this).data('idmon');

        $('#idMon').val(idMon);

        $('#formSuaTrangThai').attr('action', '/mon/xoa/' + idMon);
      });
    });
  </script>
</body>

