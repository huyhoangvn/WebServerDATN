  <!-- <h1><%= (!!locals.title)?title:'' %></h1> -->

  <div class="content-wrapper bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <span class="h2"><a href="/mon/danh-sach" class="fas fa-arrow-left"
                style="color: black; text-decoration: none;">
              </a><span style="margin-left: 20px;">Chi Tiết Món</span> </span>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Món</a></li>
              <li class="breadcrumb-item"><a href="#">Danh sách</a></li>
              <li class="breadcrumb-item active">Chi tiết món</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->
        <!-- Chi tiết món -->
        <div class="row d-flex d-inline-block h-25">
          <!-- <div class="row col-3 w-25 h-25">
            <img style="height: 300px; width: 300px;" src="../../public/images/<%= index.hinhAnh%>" alt="">
          </div> -->

          <div class="col-9">
            <h2>
              <%= index.tenMon%>
            </h2>
            <label for="" class="p-0 m-0 font-weight-normal">Hinh ảnh: <a href="../../public/images/<%= index.hinhAnh%>"
                target="_blank">
                <%= index.hinhAnh%>
              </a>

            </label>
            <br>
            <label for="" class="p-0 m-0 font-weight-normal">Loại món: <%=loaiMon.tenLM%></label>
            <br>
            <label for="" class="p-0 m-0 font-weight-normal">Cửa hàng: <%=cuaHang.tenCH%></label>
            <br>
            <label for="" class="p-0 m-0 font-weight-normal">Giá tiền: <%=index.giaTien%>đ</label>
            <br>
            <label for="" class="p-0 m-0 font-weight-normal">Số lượt đánh giá: <%=count%></label>
            <br>
            <label for="" class="p-0 m-0 font-weight-normal">Trung bình điểm đánh giá: <%=danhGiaTrungBinh%></label>
            <br>
            <% if(index.trangThai==true){%>
              <label class="font-weight-normal">Trạng thái: </label>
              <label class="text-success font-weight-normal" class="p-0 m-0">hoạt động</label>
              <%}else{%>
                <label class="font-weight-normal">Trạng thái: </label>
                <label class="text-danger font-weight-normal" class="p-0 m-0">khóa</label>
                <%}%>
          </div>
        </div>


        <h3>Danh sách đánh giá</h3>

        <!-- Filter -->
        <form action="/mon/chi-tiet/<%=idMon%>" method="GET">
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-4">
              <input type="text" class="form-control" name="tenKH" placeholder="Nhập tên người đánh giá để tìm kiếm">
            </div>

            <div class="col-4">
              <select class="form-control" name="danhGia">
                <option value="-1">Tất cả số sao</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>

            <div class="col-2">
              <select class="form-control" name="trangThai">
                <option value="-1">Tất cả trạng thái</option>
                <option value="0">Hoạt động</option>
                <option value="1">Khóa</option>
              </select>
            </div>


            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
          </div>

        </form>


        <!-- Bảng hiển thị đánh giá-->
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-4">Người đánh giá</td>
              <td scope="col-4">Số sao</td>
              <td scope="col-2">Trạng thái</td>
            </tr>
          </thead>
          <tbody>
            <% for (var i=0; i<list.length; i++) {%>
              <tr>
                <td scope="col-1">
                  <%=i+1%>
                </td>
                <td scope="col-2">
                  <%=list[i].tenKH%>
                </td>
                <td scope="col-2">
                  <%=list[i].danhGia%>
                </td>
                <td class="text-primary scope-col-2">
                  <a data-toggle="modal" data-target="#suaTrangThaiModal"
                    class=" <%= list[i].trangThai ? 'text-success' : 'text-danger' %>" data-iddanhgia="<%=list[i]._id%>"
                    data-trangthai="<%=list[i].trangThai%>">
                    <%= list[i].trangThai ? 'Hoạt động' : 'Khóa' %>
                  </a>
                </td>

              </tr>
              <%}%>
          </tbody>
        </table>

        <!-- Modal Sửa Trạng Thái -->
        <div class="modal fade" id="suaTrangThaiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa Trạng Thái</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formSuaTrangThai" action="/mon/xoa-danh-gia/list[i]._id" method="get">
                  <div class="form-group">
                    <label for="trangThai">Bạn có muốn sửa trạng thái không?</label>
                  </div>
                  <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary col-3" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary col-3">Xác nhận</button>
                  </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Phân trang hiển thị-->
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% for (var i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?trang=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>

        <% if(typeof alert !=='undefined' && alert !==null) { %>
          <input type="hidden" id="thongBao" value="<%= alert %>">
        <% } else { %>
          <input type="hidden" id="thongBao" value="">
        <% } %>

        <!-- Modal -->
        <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body" id="alertContent">
              <!-- Nội dung cảnh báo sẽ được thêm vào đây -->
            </div>
          </div>
        </div>
      </div>


      </div>
    </section>
  </div>

  <!-- Scripts -->
  <script type="text/javascript">
    let myidtoinsert = window.location.toString();
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )

    $(document).ready(function () {
      $('a[data-target="#suaTrangThaiModal"]').on('click', function () {

        var idDG = $(this).data('iddanhgia');

        $('#idDG').val(idDG);

        $('#formSuaTrangThai').attr('action', '/mon/xoa-danh-gia/' + idDG);
      });
    });


    $(document).ready(function () {
      // Lấy tham số từ URL
      var urlParams = new URLSearchParams(window.location.search);

      // Lấy giá trị của các tham số từ URL hoặc mặc định là giá trị đầu tiên của hộp select
      var tenKHValue = urlParams.get('tenKH') || '';
      var danhGiaValue = urlParams.get('danhGia') || "-1"; // Chọn giá trị đầu tiên
      var trangThaiValue = urlParams.get('trangThai') || "-1"; // Chọn giá trị đầu tiên

      // Điền lại giá trị của các trường
      $("input[name='tenKH']").val(tenKHValue);
      $("select[name='danhGia']").val(danhGiaValue);
      $("select[name='trangThai']").val(trangThaiValue);
    });

    // Lấy giá trị của input có id là 'thongBao' từ view
    var alertContent = document.getElementById("thongBao").value;
    // Kiểm tra xem alertContent có giá trị không
    if (alertContent) {
      // Hiển thị cảnh báo trong modal
      var modal = $('#alertModal');
      var alertText = $('#alertContent');
      alertText.text(alertContent);

      // Hiển thị modal
      modal.modal('show');

      // Đóng modal sau một khoảng thời gian (3 giây)
      setTimeout(function () {
        modal.modal('hide');
      }, 2000);
    }
  </script>
</body>

</html>