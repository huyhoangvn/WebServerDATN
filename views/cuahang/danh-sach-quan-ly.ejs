      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>
  <!-- <h1><%= (!!locals.title)?title:'' %></h1> -->

  <div class="content-wrapper bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Danh Sách Quản Lý Nhân Viên</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Cửa hàng</a></li>
              <li class="breadcrumb-item active">Danh sách tài khoản quản lý</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <form action="/quan-ly/danh-sach">
          <!-- Main content nằm ở dây -->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-4">
              <input type="text" id="tenNV" class="form-control" name="tenNV"
                placeholder="Nhập tên quản lý để tìm kiếm">
            </div>

            <div class="col-3">
              <select class="form-control" id="phanQuyen" name="phanQuyen">
                <option value="">Vai trò </option>
                <option value="0">Quản lý</option>
                <option value="2">Chưa được duyệt</option>
              </select>
            </div>

            <div class="col-3">
              <select class="form-control" id="trangThai" name="trangThai">
                <option value="-1">Trạng thái </option>
                <option value="1">Hoạt Động</option>
                <option value="0">Khóa</option>
              </select>
            </div>


            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
          </div>
        </form>

        <!-- Bảng hiển thị -->
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tên quản lý </td>
              <td scope="col-2">Số điện thoại</td>
              <td scope="col-2">Cửa hàng</td>
              <td scope="col-2">Vai trò</td>
              <td scope="col-2">Trạng Thái</td>
              <td scope="col-1">Chức năng</td>
            </tr>
          </thead>
          <tbody>
            <% for (var i=0; i<data.length; i++) {%>
              <tr>
                <td scope="col-1">
                  <%=i+1%>
                </td>
                <td scope="col-2">
                  <%=data[i].tenNV%>
                </td>
                <td scope="col-2">
                  <%=data[i].sdt%>
                </td>

                <td scope="col-2">
                  <%=data[i].tenCH%>
                </td>
                <% if(data[i].phanQuyen==0){%>
                  <td class="text-success" scope="col-2">Quản Lý</td>
                  <%}else if(data[i].phanQuyen==2){%>
                    <td class="text-danger" scope="col-2">
                      <a data-toggle="modal" data-target="#exampleModal1" data-idnv1="<%=data[i]._id%>"
                        data-phanquyen="<%=data[i].phanQuyen%>">
                        Đang đợi duyệt
                      </a>

                    </td>
                    <%}%>

                      <td class="text-primary scope-col-2">
                        <a data-toggle="modal" data-target="#suaTrangThaiModal"
                          class=" <%= data[i].trangThai ? 'text-success' : 'text-danger' %>"
                          data-idnv="<%=data[i]._id%>" data-trangthai="<%=data[i].trangThai%>">
                          <%= data[i].trangThai ? 'Hoạt Động' : 'Khóa' %>
                        </a>
                      </td>

                      <td class="text-primary" scope="col-1">
                        <a href="#" class="employee-detail-link" data-toggle="modal" data-target="#employeeModal"
                          data-tenNV="<%=data[i].tenNV%>" data-tenCH="<%=data[i].tenCH%>"
                          data-thoiGianTao="<%=data[i].thoiGianTao%>" data-email="<%=data[i].email%>"
                          data-sdt="<%=data[i].sdt%>" data-phanQuyen="<%=data[i].phanQuyen%>"
                          data-trangThai="<%=data[i].trangThai%>" data-taiKhoan="<%=data[i].taiKhoan%>"
                          data-diaChi="<%=data[i].diaChi%>" data-gioiTinh="<%=data[i].gioiTinh%>">Chi tiết</a>
                      </td>
              </tr>
              <%}%>
          </tbody>
        </table>


        <div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-labelledby="employeeModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="employeeModalLabel">Chi tiết nhân viên quản lý</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-12">
                    <p><strong>Tên nhân viên:</strong> <span id="tenNV"></span></p>
                    <p><strong>Tên cửa hàng:</strong> <span id="tenCH"></span></p>
                    <p><strong>Tài khoản:</strong> <span id="taiKhoan"></span></p>
                    <p><strong>Thời gian tạo:</strong> <span id="thoiGianTao"></span></p>
                    <p><strong>Số điện thoại:</strong> <span id="sdt"></span></p>
                    <p><strong>Phân quyền:</strong> <span id="phanQuyen"></span></p>
                    <p><strong>Trạng thái:</strong> <span id="trangThai"></span></p>
                    <p><strong>Địa chỉ:</strong> <span id="diaChi"></span></p>
                    <p><strong>Giới tính:</strong> <span id="gioiTinh"></span></p>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
              </div>
            </div>
          </div>
        </div>

        <div class="modal fade" id="suaTrangThaiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Sửa Trạng Thái</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formSuaTrangThai" action="/quan-ly/xoa/data[i]._id" method="get">
                  <div class="form-group">
                    <label for="trangThai">Bạn có muốn sửa trạng thái không?</label>
                  </div>
                  <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary col-3" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary col-3">Xác nhận</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">sửa vài trò</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formsuaPhanQuyen" action="/quan-ly/duyet/data[i]._id" method="get">
                  <div class="form-group">
                    <label for="phanQuyen">Bạn có muốn sửa vai trò không?</label>
                  </div>
                  <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary col-3" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary col-3">Xác nhận</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% if(typeof alert !=='undefined' && alert !==null) { %>
          <input type="hidden" id="thongBao" value="<%= alert %>">
          <% } else { %>
            <input type="hidden" id="thongBao" value="">
            <% } %>

              <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Cảnh báo</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body" id="alertContent">
                      <!-- Nội dung cảnh báo sẽ được thêm vào đây -->
                    </div>
                  </div>
                </div>
              </div>

              <nav aria-label=" Page navigation">
                <ul class="pagination justify-content-center">
                  <% for (var i=1; i <=totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                      <a class="page-link" href="?trang=<%= i %>">
                        <%= i %>
                      </a>
                    </li>
                    <% } %>
                </ul>
              </nav>

      </div>
    </section>
  </div>

  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )
    function convertTrangThai(trangThai) {
      if (trangThai === true) {
        return "Hoạt động";
      } else {
        return "Ngưng hoạt động";
      }
    }
    function convertPhanQuyen(phanQuyen) {
      if (phanQuyen === 0) {
        return "Nhân viên quản lý";
      } else if (phanQuyen === 1) {
        return "Nhân viên thường";
      } else {
        return "Đang đợi duyệt";
      }
    }

    // Hàm chuyển đổi giới tính
    function convertGioiTinh(gioiTinh) {
      if (gioiTinh === 1) {
        return "Nam";
      } else if (gioiTinh === 2) {
        return "Nữ";
      } else {
        return "Không xác định";
      }
    }
    $(document).ready(function () {
      $('a[data-target="#employeeModal"]').on('click', function () {
        var tenNV = $(this).data('tennv');
        var tenCH = $(this).data('tench');
        var thoiGianTao = moment($(this).data('thoigiantao')).format('DD/MM/YYYY'); // Format thời gian tạo
        var email = $(this).data('Email');
        var sdt = $(this).data('sdt');
        var phanQuyen = $(this).data('phanquyen');
        var trangThai = $(this).data('trangthai');
        var taiKhoan = $(this).data('taikhoan');
        var diaChi = $(this).data('diachi');
        var gioiTinh = $(this).data('gioitinh');

        var trangThaiText = convertTrangThai(trangThai);
        var gioiTinhText = convertGioiTinh(gioiTinh);
        var phanQuyenText = convertPhanQuyen(phanQuyen);

        $('#employeeModal').find('#tenNV').text(tenNV);
        $('#employeeModal').find('#tenCH').text(tenCH);
        $('#employeeModal').find('#thoiGianTao').text(thoiGianTao);
        $('#employeeModal').find('#email').text(email);
        $('#employeeModal').find('#sdt').text(sdt);
        $('#employeeModal').find('#phanQuyen').text(phanQuyenText);
        $('#employeeModal').find('#trangThai').text(trangThaiText);
        $('#employeeModal').find('#taiKhoan').text(taiKhoan);
        $('#employeeModal').find('#diaChi').text(diaChi);
        $('#employeeModal').find('#gioiTinh').text(gioiTinhText);
      });
    });
    $(document).ready(function () {
      $('a[data-target="#suaTrangThaiModal"]').on('click', function () {
        var idNV = $(this).data('idnv');

        $('#idNV').val(idNV);

        $('#formSuaTrangThai').attr('action', '/quan-ly/xoa/' + idNV);

      });

      $('a[data-target="#exampleModal1"]').on('click', function () {
        var idNV1 = $(this).data('idnv1');

        $('#idNV1').val(idNV1);

        $('#formsuaPhanQuyen').attr('action', '/quan-ly/duyet/' + idNV1);
      });
    });

    var alertContent = document.getElementById("thongBao").value;
    // Kiểm tra xem alertContent có giá trị không
    if (alertContent) {
      // Hiển thị cảnh báo trong modal
      var modal = $('#alertModal');
      var alertText = $('#alertContent');
      alertText.text(alertContent);

      // Hiển thị modal
      modal.modal('show');

      // Đóng modal sau một khoảng thời gian (3 giây)
      setTimeout(function () {
        modal.modal('hide');
      }, 2000);
    }

  </script>
</body>

</html>