            </ul>
          </li>
          <!-- Quản lý món -->
          <li class="nav-item menu-open">
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/mon/danh-sach" class="nav-link">

                  <p>Danh sách món</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/loai-mon/danh-sach" class="nav-link">

                  <p>Danh sách loại món</p>
                </a>
              </li>
            </ul>
          </li>

          <!-- hóa đơn -->
          <li class="nav-item menu-open">
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/hoa-don/danh-sach" class="nav-link ">

                  <p>Danh sách hóa đơn</p>
                </a>
              </li>
            </ul>
          </li>

          <!-- Quản lý cửa hàng -->
          <li class="nav-item menu-open">

            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/cua-hang/danh-sach" class="nav-link">

                  <p>Danh sách cửa hàng</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/quan-ly/danh-sach" class="nav-link active">

                  <p>Danh sách tài khoản quản lý</p>
