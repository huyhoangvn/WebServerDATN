  <div class="content-wrapper bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Danh Sách Cửa Hàng</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Cửa hàng</a></li>
              <li class="breadcrumb-item active">Danh sách</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">
        <!-- Main content nằm ở dây -->
        <!-- Bắt đầu filter -->
        <form action="/cua-hang/danh-sach" method="GET">
          <!-- tìm theo tên món và tên cửa hàng -->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-3">
              <input type="text" id="searchMon" class="form-control" name="tenCH"
                placeholder="Nhập tên cửa hàng để tìm kiếm">
            </div>
            <div class="col-3">
              <input type="text" id="searchCuaHang" class="form-control" name="diaChi"
                placeholder="Nhập địa chỉ để tìm kiếm">
            </div>
            <div class="col-2">
              <select class="form-control" name="trangThai">
                <option value="-1">Tất cả trạng thái</option>
                <option value="1">Hoạt động</option>
                <option value="2">Khóa</option>
              </select>
            </div>
            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
            <div class="col-2">
              <a class="btn btn-dark w-100" href="/cua-hang/them-moi">Thêm Mới cửa hàng</a>
            </div>
          </div>
        </form>
        <!-- Kết thúc filter -->

        <!-- Bắt đầu bảng -->
        <label for="">Đã tìm thấy <%=count%> kết quả</label>
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tên cửa hàng</td>
              <td scope="col-2">Số điện thoại</td>
              <td scope="col-2">Số nhân viên</td>
              <td scope="col-2">Địa chỉ</td>
              <td scope="col-2">Trạng thái</td>
              <td scope="col-1">Chức năng</td>
            </tr>
          </thead>
          <tbody>
            <% for (var i=0; i<listCH.length; i++) {%>
              <tr>
                <td scope="col-1">
                  <%=i+1%>
                </td>
                <td scope="col-2">
                  <%=listCH[i].tenCH%>
                </td>
                <td scope="col-2">
                  <%=listCH[i].sdt%>
                </td>
                <td scope="col-2">
                  <%=listCH[i].soLuongNhanVien%>
                </td>
                <td scope="col-2">
                  <%=listCH[i].diaChi%>
                </td>
                <td class="text-primary scope-col-2">
                  <a data-toggle="modal" data-target="#suaTrangThaiModal"
                    class=" <%= listCH[i].trangThai ? 'text-success' : 'text-danger' %>" data-idch="<%=listCH[i]._id%>"
                    data-trangthai="<%=listCH[i].trangThai%>">
                    <%= listCH[i].trangThai ? 'Hoạt động' : 'Khóa' %>
                  </a>
                </td>

                <td class="text-primary" scope="col-1">
                  <a href="/cua-hang/chi-tiet/<%=listCH[i].idCH%>">Chi tiết</a>
                </td>
              </tr>
              <%}%>
          </tbody>
        </table>
        <!-- Kết thúc bảng -->

        <!-- Modal Sửa Trạng Thái -->
        <div class="modal fade" id="suaTrangThaiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa Trạng Thái</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formSuaTrangThai" action="/cua-hang/xoa/listCH[i]._id" method="get">
                  <div class="form-group">
                    <label for="">Bạn có muốn sửa trạng thái không?</label>
                  </div>
                  <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary col-3" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary col-3">Xác nhận</button>
                  </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Hết modal -->

        <!-- Bắt đầu phân trang -->
        <label for=""></label>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% for (var i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?trang=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>
        <!-- kết thúc phân trang -->
      </div>
    </section>
  </div>

  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )

    $(document).ready(function () {
      $('a[data-target="#suaTrangThaiModal"]').on('click', function () {

        var idCH = $(this).data('idch');

        $('#idCH').val(idCH);

        $('#formSuaTrangThai').attr('action', '/cua-hang/xoa/' + idCH);
      });
    });
  </script>
</body>

</html>