  <div class="content-wrapper bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <span class="h2"><a href="/cua-hang/danh-sach" class="fas fa-arrow-left"
                style="color: black; text-decoration: none;">
              </a><span style="margin-left: 20px;">Thêm Mới Cửa Hàng</span> </span>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Cửa hàng</a></li>
              <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->
        <form action="/cua-hang/add" method="post">
          <h5 class="py-2">Nhập thông tin cửa hàng</h5>
          <div class="form-group">
            <label class="form-label">Tên Cửa hàng</label>
            <input type="text" class="form-control" id="tenCH" name="tenCH" placeholder="Nhập tên cửa hàng ">
          </div>
          <div class="form-group">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" placeholder="Nhập email">
          </div>
          <div class="form-group">
            <label class="form-label">Số điện thoại</label>
            <input type="text" class="form-control" name="sdt" id="sdt" placeholder="Nhập Số điện thoại">
          </div>
          <div class="form-group">
            <label class="form-label">Địa chỉ</label>
            <input type="text" class="form-control" name="diaChi" id="diaChi" placeholder="Nhập Địa chỉ">
          </div>
          <div class="form-group">
            <label class="form-label">Thời gian Mở</label>
            <input type="text" class="form-control" name="thoiGianMo" id="thoiGianMo"
              placeholder="Nhập thời gian mở cửa (ví dụ 09:00:00)">
          </div>
          <div class="form-group">
            <label class="form-label">Thời gian Đóng</label>
            <input type="text" class="form-control" name="thoiGianDong" id="thoiGianDong"
              placeholder="Nhập thời gian đóng cửa (ví dụ 23:00:00)">
          </div>
          <div class="form-group">
            <label class="form-label" for="hinhAnh">Hình ảnh</label>
            <div>
              <input type="file" accept="image/*" class="form-control-file" name="hinhAnh" id="hinhAnh"
                onchange="previewImage(event)">
              <span id="fileName" style="display:none;"></span>
            </div>
          </div>

          <% if(typeof error==="string" && !(error.trim().length===0)){%>
            <span class="text-danger">
              <%= error %>
            </span>
            <%}%>
              <div class="col text-center">
                <button type="submit" class="btn btn-default btn-dark">Thêm Cửa hàng</button>
              </div>

        </form>
        <% if(typeof alert !=='undefined' && alert !==null) { %>
          <input type="hidden" id="thongBao" value="<%= alert %>">
          <% } else { %>
            <input type="hidden" id="thongBao" value="">
            <% } %>

              <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Cảnh báo</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body" id="alertContent">
                      <!-- Nội dung cảnh báo sẽ được thêm vào đây -->
                    </div>
                  </div>
                </div>
              </div>


      </div>
    </section>
  </div>

  <!-- Scripts -->


  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )
    function previewImage(event) {
      var selectedImage = document.getElementById('selectedImage');
      selectedImage.style.display = 'block';
      selectedImage.src = URL.createObjectURL(event.target.files[0]);
    }

    var alertContent = document.getElementById("thongBao").value;
    // Kiểm tra xem alertContent có giá trị không
    if (alertContent) {
      // Hiển thị cảnh báo trong modal
      var modal = $('#alertModal');
      var alertText = $('#alertContent');
      alertText.text(alertContent);

      // Hiển thị modal
      modal.modal('show');

      // Đóng modal sau một khoảng thời gian (3 giây)
      setTimeout(function () {
        modal.modal('hide');
      }, 2000);
    }
  </script>
