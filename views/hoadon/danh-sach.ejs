<!DOCTYPE html>
<html>

<head>
    <title>Food Center</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.0.0/css/flag-icons.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b5123099c5.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <!-- <style>
      .sidebar-dark-primary {
        background-color: #030025 !important; /* Change to green color */
      }
    </style> -->
</head>

<body>
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link logo-switch this">
            Food Center
        </a>
        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">
                        <%= (!!locals.admin)?admin:'Admin' %>
                    </a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2 ">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                    <!-- Thống Kê -->
                    <li class="nav-item menu-open">
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/thong-ke/doanh-thu" class="nav-link ">

                                    <p>Thống kê doanh thu</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/thong-ke/mon-ban-chay" class="nav-link">

                                    <p>Thống kê món bán chạy</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Quản lý món -->
                    <li class="nav-item menu-open">
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/mon/danh-sach" class="nav-link">

                                    <p>Danh sách món</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/loai-mon/danh-sach" class="nav-link">

                                    <p>Danh sách loại món</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- hóa đơn -->
                    <li class="nav-item menu-open">
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/hoa-don/danh-sach" class="nav-link active">

                                    <p>Danh sách hóa đơn</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Quản lý cửa hàng -->
                    <li class="nav-item menu-open">

                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/cua-hang/danh-sach" class="nav-link">

                                    <p>Danh sách cửa hàng</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/quan-ly/danh-sach" class="nav-link">

                                    <p>Danh sách tài khoản quản lý</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Quản lý khuyến mãi -->
                    <li class="nav-item menu-open">

                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/khuyen-mai/danh-sach" class="nav-link">

                                    <p>Danh sách khuyến mãi</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Quản lý khách hàng -->
                    <li class="nav-item menu-open">
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/khach-hang/danh-sach" class="nav-link">

                                    <p>Danh sách khách hàng</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Đăng xuất -->
                    <li class="nav-item border-top border-1 ">
                        <a href="/auth/sign-out" class="nav-link">
                            <p>
                                Đăng xuất
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>
    <!-- <h1><%= (!!locals.title)?title:'' %></h1> -->

    <div class="content-wrapper bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
        <div class="content-header border border-bottom-1">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Danh Sách Hóa Đơn</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Hóa Đơn</a></li>
                            <li class="breadcrumb-item active">Danh sách</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>

        <section class="content">
            <div class="container-fluid bg-white m-2">

                <!-- Main content nằm ở dây -->
                <form action="/hoa-don/danh-sach">
                    <!-- Main content nằm ở dây -->
                    <div class="d-flex row justify-content-between mb-1">
                        <div class="col-6">
                            <input type="text" id="maHD" class="form-control" name="maHD"
                                placeholder="Nhập mã hóa đơn để tìm kiếm">
                        </div>
                        <div class="mb-3">
                            <input type="date" class="form-control" name="thoiGianTao" id="thoiGianTao"
                                placeholder="Ngày tạo">
                        </div>

                        <div class="mb-3">
                            <select class="form-control" id="trangThaiThanhToan" name="trangThaiThanhToan">
                                <option value="-1">Trạng thái thanh toán</option>
                                <option value="1">Đã thanh toán</option>
                                <option value="0">Chưa thanh toán</option>
                            </select>
                        </div>

                        <div class="col-2">
                            <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
                        </div>
                    </div>
                </form>
                <!-- Bảng hiển thị -->
                <table class="table table-bordered border-secondary">
                    <thead>
                        <tr class="table-secondary">
                            <td scope="col-1">STT</td>
                            <td scope="col-2">Mã hóa đơn </td>
                            <td scope="col-2">Thời gian tạo</td>
                            <td scope="col-2">Thành tiền</td>
                            <td scope="col-2">Trạng thái thanh toán</td>
                            <td scope="col-2">Trạng thái giao hàng</td>
                            <td scope="col-1">Chức năng</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i<data.length; i++) {%>
                            <tr>
                                <td scope="col-1">
                                    <%=i+1%>
                                </td>
                                <td scope="col-2">
                                    <%=data[i].maHD%>
                                </td>
                                <td scope="col-2">
                                    <% var startDate=new Date(data[i].thoiGianTao); %>
                                        <%= ("0" + startDate.getDate()).slice(-2) %>/<%= ("0" + (startDate.getMonth() +
                                                1)).slice(-2) %>/<%= startDate.getFullYear() %>
                                </td>
                                <td scope="col-2">
                                    <%=data[i].thanhTien.toLocaleString()%>đ
                                </td>

                                <% if(data[i].trangThaiThanhToan==1){%>
                                    <td class="text-success" scope="col-2">Đã thanh toán</td>
                                    <%}else{%>
                                        <td class="text-danger" scope="col-2">Chưa thanh Toán</td>
                                        <%}%>
                                            <% if(data[i].trangThaiMua==0){%>
                                                <td scope="col-2">Đang đợi duyệt</td>
                                                <%}else if(data[i].trangThaiMua==1){%>
                                                    <td scope="col-2">Đang chuẩn bị</td>
                                                    <%}else if(data[i].trangThaiMua==2){%>
                                                        <td scope="col-2">Đang giao hàng</td>
                                                        <%}else if(data[i].trangThaiMua==3){%>
                                                            <td scope="col-2">Giao hàng thành công
                                                            </td>
                                                            <%}else if(data[i].trangThaiMua==4){%>
                                                                <td scope="col-2">Giao hàng thất bại
                                                                </td>
                                                                <%}%>

                                                                    <td class="text-primary" scope="col-1">
                                                                        <a href="/hoa-don/chi-tiet/<%=data[i]._id%>">Chi
                                                                            tiết</a>
                                                                    </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>

                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% for (var i=1; i <=totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?trang=<%= i %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
                    </ul>
                </nav>

            </div>
        </section>
    </div>


    <!-- Scripts -->
    <script type="text/javascript">
        $(document).ready(function () {
            $(".open").click(function (e) {
                e.stopPropagation()
                e.preventDefault()
                $(this).parent().toggleClass('menu-open');
            }
            )
        }
        )
    </script>
</body>

</html>