    )

     // Khôi phục các giá trị của các trường khi trang được tải lại
  window.onload = function() {
    var searchTenKH = localStorage.getItem('searchTenKH');
    var searchTaiKhoanKH = localStorage.getItem('searchTaiKhoanKH');
    var searchTrangThai = localStorage.getItem('searchTrangThai');

    // Đặt lại giá trị của các trường
    document.getElementById('searchTenKH').value = searchTenKH;
    document.getElementById('searchTaiKhoanKH').value = searchTaiKhoanKH;
    document.getElementById('searchTrangThai').value = searchTrangThai;
  };

  // Lưu các giá trị của các trường khi form được submit
  document.getElementById('searchForm').addEventListener('submit', function() {
    var searchTenKH = document.getElementById('searchTenKH').value;
    var searchTaiKhoanKH = document.getElementById('searchTaiKhoanKH').value;
    var searchTrangThai = document.getElementById('searchTrangThai').value;

    localStorage.setItem('searchTenKH', searchTenKH);
    localStorage.setItem('searchTaiKhoanKH', searchTaiKhoanKH);
    localStorage.setItem('searchTrangThai', searchTrangThai);
  });

  function convertTrangThai(trangThai) {
      if (trangThai === true) {
        return "Hoạt động";
      } else {
        return "Khóa";
      }
    }

  $(document).ready(function () {
      $('a[data-target="#suaTrangThaiModal"]').on('click', function () {

        var idKH = $(this).data('idkh');

        $('#idKH').val(idKH);

        $('#formSuaTrangThai').attr('action', '/khach-hang/xoa/' + idKH);
      });
    });
  </script>
