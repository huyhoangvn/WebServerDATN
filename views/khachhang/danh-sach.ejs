  <!-- <h1><%= (!!locals.title)?title:'' %></h1> -->

  <div class="content-wrapper bg-white bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Danh Sách Khách Hàng</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Khách hàng</a></li>
              <li class="breadcrumb-item active">Danh sách</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <form action="/khach-hang/danh-sach" id="searchForm">
          <!-- Main content nằm ở dây -->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-4">
              <input type="text" id="searchTenKH" class="form-control" name="tenKH"
                placeholder="Nhập tên khách hàng để tìm kiếm">
            </div>
            <div class="col-4">
              <input type="text" id="searchTaiKhoanKH" class="form-control" name="sdt"
                placeholder="Nhập số điện thoại để tìm kiếm">
            </div>

            <div class="col-2">
              <select class="form-control" name="trangThai" id="searchTrangThai">
                <option value="-1">Tất cả trạng thái</option>
                <option value="1">Hoạt động</option>
                <option value="0">Khóa</option>
              </select>
            </div>

            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
          </div>
        </form>


        <!-- Bảng hiển thị -->
        <label for="">Tìm thấy <%=soLuongKhachHang%> kết quả</label>
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tên </td>
              <td scope="col-2">Số điện thoại</td>
              <td scope="col-2">Trạng thái</td>
              <td scope="col-1">Chức năng</td>
            </tr>
          </thead>
          <tbody>
            <% for (var i=0; i<data.length; i++) {%>
              <tr>
                <td scope="col-1">
                  <%=i+1%>
                </td>
                <td scope="col-2">
                  <%=data[i].tenKH%>
                </td>
                <td scope="col-2">
                  <%=data[i].sdt%>
                </td>
                <td class="text-primary scope-col-2">
                  <a data-toggle="modal" data-target="#suaTrangThaiModal"
                    class=" <%= data[i].trangThai ? 'text-success' : 'text-danger' %>" data-idkh="<%=data[i]._id%>"
                    data-trangthai="<%=data[i].trangThai%>">
                    <%= data[i].trangThai ? 'Hoạt động' : 'Khóa' %>
                  </a>
                </td>
                <td class="text-primary" scope="col-2">
                  <a data-toggle="modal" data-target="#exampleModal" data-tenkh="<%=data[i].tenKH%>"
                    data-gioitinh="<%=data[i].gioiTinh%>" data-sdt="<%=data[i].sdt%>" data-diachi="<%=data[i].diaChi%>"
                    data-trangthai="<%=data[i].trangThai%>">
                    Chi tiết</a>
                </td>
              </tr>
              <%}%>
          </tbody>
        </table>

        <!-- Modal Sửa Trạng Thái -->
        <div class="modal fade" id="suaTrangThaiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa Trạng Thái</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formSuaTrangThai" action="/khach-hang/sua-trang-thai/data[i]._id" method="get">
                  <div class="form-group">
                    <label for="trangThai">Bạn có muốn sửa trạng thái không?</label>
                  </div>
                  <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary col-3" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary col-3">Xác nhận</button>
                  </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Chi tiết khách hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-12">
                    <p>
                      <strong>Tên khách hàng: </strong><span id="tenkh"></span>
                    </p>
                    <p><strong>Giới tính: </strong> <span id="gioitinh"></span></p>
                    <p><strong>Địa chỉ: </strong> <span id="diachi"></span></p>
                    <p><strong>Số điện thoại: </strong> <span id="sdt"></span></p>
                    <p><strong>Trạng thái: </strong> <span id="trangthai"></span></p>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
              </div>
            </div>
          </div>
        </div>

        <nav aria-label=" Page navigation">
          <ul class="pagination justify-content-center">
            <% for (var i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?trang=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>

        <% if(typeof alert !=='undefined' && alert !==null) { %>
          <input type="hidden" id="thongBao" value="<%= alert %>">
          <% } else { %>
            <input type="hidden" id="thongBao" value="">
            <% } %>

              <!-- Modal -->
              <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body" id="alertContent">
                      <!-- Nội dung cảnh báo sẽ được thêm vào đây -->
                    </div>
                  </div>
                </div>
              </div>

      </div>
    </section>
  </div>

  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )

    $(document).ready(function () {
      // Lấy tham số từ URL
      var urlParams = new URLSearchParams(window.location.search);

      // Lấy giá trị của các tham số từ URL hoặc mặc định là giá trị đầu tiên của hộp select
      var tenKHValue = urlParams.get('tenKH') || '';
      var sdtValue = urlParams.get('sdt') || '';
      var trangThaiValue = urlParams.get('trangThai') || "-1"; // Chọn giá trị đầu tiên

      // Điền lại giá trị của các trường
      $("#searchTenKH").val(tenKHValue);
      $("#searchTaiKhoanKH").val(sdtValue);
      $("#searchTrangThai").val(trangThaiValue);
    });

    function convertTrangThai(trangThai) {
      if (trangThai === true) {
        return "Hoạt động";
      } else {
        return "Khóa";
      }
    }

    $(document).ready(function () {
      $('a[data-target="#suaTrangThaiModal"]').on('click', function () {

        var idKH = $(this).data('idkh');

        $('#idKH').val(idKH);

        $('#formSuaTrangThai').attr('action', '/khach-hang/sua-trang-thai/' + idKH);
      });
    });

    function convertgioitinh(gioitinh) {
      if (gioitinh === 1) {
        return "Nam";
      } else {
        return "Nữ";
      }
    }

    // chi tiết
    $(document).ready(function () {
      $('a[data-target="#exampleModal"]').on('click', function () {
        var tenkh = $(this).data('tenkh');
        var gioitinh = $(this).data('gioitinh');
        var sdt = $(this).data('sdt');
        var diachi = $(this).data('diachi');
        var trangthai = $(this).data('trangthai');

        var trangThaiText = convertTrangThai(trangthai);
        var gioiTinhText = convertgioitinh(gioitinh);

        $('#exampleModal').find('#tenkh').text(tenkh);
        $('#exampleModal').find('#gioitinh').text(gioiTinhText);
        $('#exampleModal').find('#sdt').text(sdt);
        $('#exampleModal').find('#diachi').text(diachi);
        $('#exampleModal').find('#trangthai').text(trangThaiText);
      });
    });

    // Lấy giá trị của input có id là 'thongBao' từ view
    var alertContent = document.getElementById("thongBao").value;
    // Kiểm tra xem alertContent có giá trị không
    if (alertContent) {
      // Hiển thị cảnh báo trong modal
      var modal = $('#alertModal');
      var alertText = $('#alertContent');
      alertText.text(alertContent);

      // Hiển thị modal
      modal.modal('show');

      // Đóng modal sau một khoảng thời gian (3 giây)
      setTimeout(function () {
        modal.modal('hide');
      }, 2000);
    }
    $(document).ready(function () {
      // Function to update URL query parameters
      function updateURLParams(page) {
        var url = new URL(window.location.href);
        url.searchParams.set('searchTaiKhoanKH', $('#searchTaiKhoanKH').val() || '');
        url.searchParams.set('searchTrangThai', $('#searchTrangThai').val());
        url.searchParams.set('searchTenKH', $('#searchTenKH').val());
        url.searchParams.set('trang', page);
        window.location.href = url.href;
      }

      $(".page-link").click(function (e) {
        e.preventDefault();
        var page = $(this).attr('href').split('=')[1];
        updateURLParams(page);
      });
    });
  </script>
</body>

</html>