                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Khách hàng</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Khách hàng</a></li>
                            <li class="breadcrumb-item active">Danh sách</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>

        <section class="content">
            <div class="container-fluid bg-white m-2">


                <div class="col-9">
                    <h2>
                        Tên khách hàng: <%=index.tenKH%>
                    </h2>
                    <label for="" class="p-0 m-0 font-weight-normal"> Tài Khoản: <%=index.taiKhoan%></label>
                    <br>
                    <label for="" class="p-0 m-0 font-weight-normal">Mật khẩu: <%=index.matKhau%> </label>
                    <br>
                    <label for="" class="p-0 m-0 font-weight-normal">Giới tính: <%=index.gioiTinh%> </label>
                    <br>
                    <label for="" class="p-0 m-0 font-weight-normal">Địa chỉ: <%=index.diaChi%> </label>
                    <br>
                    <label for="" class="p-0 m-0 font-weight-normal"> Số điện thoại: <%=index.sdt%> </label>
                    <br>
                    <% if(index.trangThai==true){%>
                        <label class="font-weight-normal">Trạng thái: </label>
                        <label class="text-success font-weight-normal" class="p-0 m-0">hoạt động</label>
                        <%}else{%>
                            <label class="font-weight-normal">Trạng thái: </label>
                            <label class="text-danger font-weight-normal" class="p-0 m-0">khóa</label>
                            <%}%>
                </div>
            </div>

    </div>
    </section>
    </div>

    <!-- Scripts -->
    <script type="text/javascript">
        $(document).ready(function () {
            $(".open").click(function (e) {
                e.stopPropagation()
