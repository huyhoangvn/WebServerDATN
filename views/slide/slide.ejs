    </style>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

    <script>
      function openDeleteModal(id) {
        // Set ID value for further use
        $('#deleteButton').data('id', id);
        // Show the modal
        $('#confirmDeleteModal').modal('show');
      }

      // Function to delete item
      function deleteItem() {
        var deleteFrom = document.forms["delete-from"];
        // Get the ID value from the button data
        var id = $('#deleteButton').data('id');
        // You can use the ID here as needed
        deleteFrom.action = '/slide/delete/' + id + '?_method=POST';
        $('#confirmDeleteModal').modal('hide');
        deleteFrom.submit();
      }

      function openUpdateModal(id) {
        // Set ID value for further use
        $('#updateButton').data('id', id);
        // Show the modal
        $('#confirmUpdateModal').modal('show');
      }

      // Function to delete item
      function updateItem() {
        var updateFrom = document.forms["update-from"];
        // Get the ID value from the button data
        var id = $('#updateButton').data('id');
        updateFrom.action = '/slide/update/' + id + '?_method=POST';
        updateFrom.enctype = "multipart/form-data"
        $('#confirmUpdateModal').modal('hide');
        updateFrom.submit();
      }









      $(document).ready(function () {
        $(".search_select_box select").selectpicker();
      });

      $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).next(".custom-file-label").addClass("selected").html(fileName);
      });


      function addOption(selectElement, text, value) {
        var option = document.createElement("option");
        option.text = text;
        option.value = value;
        selectElement.appendChild(option);
        // Cập nhật Bootstrap Select sau khi thêm option mới
        $(selectElement).selectpicker("refresh");
      }

      // Function để lấy dữ liệu từ server và thêm vào dropdown
      function populateDropdown(selectedValue) {
        var selectMon = document.getElementById("selectMon");
        // Xóa các option cũ trước khi thêm các option mới
        selectMon.innerHTML = ""; // Xóa toàn bộ nội dung trong dropdown

        // Gọi API để lấy dữ liệu mới từ server
        fetch(
          `http://localhost:3000/api/nhanvien/mon/theo-cua-hang/${selectedValue}`
        )
          .then((response) => response.json())
          .then((data) => {
            if (data.list.length === 0) {
              // Nếu không có dữ liệu từ server, thêm một option mặc định vào dropdown
              addOption(selectMon, "Không có dữ liệu", "");
            } else {
              // Nếu có dữ liệu từ server, thêm các option từ dữ liệu vào dropdown
              data.list.forEach((mon) => {
                addOption(selectMon, mon.tenMon, mon._id);
              });
            }
          })
          .catch((error) => console.error("Error:", error));
      }

      // Gọi function để populate dropdown khi trang được load
      window.addEventListener("load", function () {
        // Lấy giá trị ban đầu của dropdown (nếu cần)
        var selectedValue = document.getElementById("selectStore").value;
        // Populate dropdown với giá trị ban đầu
        populateDropdown(selectedValue);
      });

      // Thêm sự kiện change cho dropdown "selectStore"
      document
        .getElementById("selectStore")
        .addEventListener("change", function () {
          var selectedValue = this.value;
          // Khi dropdown thay đổi, gọi lại hàm populateDropdown với giá trị mới
          populateDropdown(selectedValue);
        });
    </script>
</body>

