    <section class="content">
      <% if (typeof error !=='undefined' ) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
        <% } %>
          <label for="" class="m-0 mb-2">Thêm ảnh slide </label>
          <br />
          <form action="/slide" method="POST" enctype="multipart/form-data">
            <div class="d-flex row justify-content-between mb-1">
              
              <div class="search_select_box col-2 form-group">
                <select id="selectStore" class="form-control" data-live-search="true" name="idStore">
                  <% dataStore.forEach(function(store) { %>

                    <option value="<%= store._id %>">
                      <%= store.tenCH %>
                    </option>

                    <% }); %>
                </select>
              </div>

              <div class="search_select_box col-2 form-group">
                <select name="idDish" id="selectMon" data-live-search="true">
                  <!-- Các option sẽ được thêm vào đây bằng JavaScript -->
                </select>
              </div>

                <div class="input-group col-6 form-group">
                  <div class="custom-file">
                    <input type="file" class="custom-file-input" name="imageSlide"
                      aria-describedby="inputGroupFileAddon01" />
                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                  </div>
                </div>

              <div class="col-auto form-group">
                <button class="btn btn-default btn-dark" type="submit" id="thongKe">
                  Thêm ảnh
                </button>
              </div>
            </div>
          </form>

          <table class="table table-bordered border-secondary">
            <thead>
              <tr class="table-secondary">
                <td scope="col" class="text-center">STT</td>
                <td scope="col" class="text-center">Tên món</td>
                <td scope="col" class="text-center">Cửa hàng</td>
                <td scope="col" class="text-center">Hình ảnh</td>
                <td scope="col" class="text-center">Chức năng</td>
              </tr>
            </thead>
            <tbody>
              <% for (var i=0; i < dataSlide.length; i++) { %>
                <tr>
                  <td class="align-middle text-center">
                    <%= i + 1 %>
                  </td>
                  <td class="align-middle text-center">
                    <%= dataSlide[i].idMon.tenMon %>
                  </td>
                  <td class="align-middle text-center">
                    <%= dataSlide[i].idCH.tenCH %>
                  </td>
                  <td class="align-middle text-center col-3"><img width="250px" height="120px"
                      src="http://localhost:3000/public/images/<%= dataSlide[i].imgSlide %>" alt="Slide Image"></td>
                  <td class="align-middle text-center col-3">
                    <a onclick="openUpdateModal('<%= dataSlide[i]._id %>')" class="btn btn-primary text-white w-40"
                      style="width: 150px;">Chỉnh sửa</a>

                    <a onclick="openDeleteModal('<%= dataSlide[i]._id %>')" class="btn btn-danger text-white"
                      style="width: 150px;">Xóa</a>


                  </td>
                </tr>
                <% } %>
            </tbody>

          </table>

          <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Xác nhận xóa</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Bạn có chắc chắn muốn xóa?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                  <button onclick="deleteItem()" type="button" class="btn btn-danger" id="deleteButton">Xóa</button>
                </div>
              </div>
            </div>
          </div>

          <div class="modal fade" id="confirmUpdateModal" tabindex="-1" role="dialog"
