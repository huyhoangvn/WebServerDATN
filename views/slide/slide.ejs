    <script>
      function openDeleteModal(id) {
        // Set ID value for further use
        $('#deleteButton').data('id', id);
        // Show the modal
        $('#confirmDeleteModal').modal('show');
      }

      // Function to delete item
      function deleteItem() {
        var deleteFrom = document.forms["delete-from"];
        // Get the ID value from the button data
        var id = $('#deleteButton').data('id');
        // You can use the ID here as needed
        deleteFrom.action = '/slide/delete/' + id + '?_method=POST';
        $('#confirmDeleteModal').modal('hide');
        deleteFrom.submit();
      }

      function openUpdateModal(id) {
        // Set ID value for further use
        $('#updateButton').data('id', id);
        // Show the modal
        $('#confirmUpdateModal').modal('show');
      }

      // Function to delete item
      function updateItem() {
        var updateFrom = document.forms["update-from"];
        // Get the ID value from the button data
        var id = $('#updateButton').data('id');
        updateFrom.action = '/slide/update/' + id + '?_method=POST';
        updateFrom.enctype = "multipart/form-data"
        $('#confirmUpdateModal').modal('hide');
        updateFrom.submit();
      }









      $(document).ready(function () {
