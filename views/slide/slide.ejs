      function addOption(selectElement, text, value) {
        var option = document.createElement("option");
        option.text = text;
        option.value = value;
        selectElement.appendChild(option);
        // C·∫≠p nh·∫≠t Bootstrap Select sau khi th√™m option m·ªõi
        $(selectElement).selectpicker("refresh");
      }

      // Function ƒë·ªÉ l·∫•y d·ªØ li·ªáu t·ª´ server v√† th√™m v√†o dropdown
      function populateDropdown(selectedValue) {
        var selectMon = document.getElementById("selectMon");
        // X√≥a c√°c option c≈© tr∆∞·ªõc khi th√™m c√°c option m·ªõi
        selectMon.innerHTML = ""; // X√≥a to√†n b·ªô n·ªôi dung trong dropdown

        // G·ªçi API ƒë·ªÉ l·∫•y d·ªØ li·ªáu m·ªõi t·ª´ server
        fetch(
          `/slide/theo-cua-hang/${selectedValue}`
        )
          .then((response) => response.json())
          .then((data) => {
            console.log("üöÄ ~ .then ~ data:", data)
            if (data.list.length === 0) {
              // N·∫øu kh√¥ng c√≥ d·ªØ li·ªáu t·ª´ server, th√™m m·ªôt option m·∫∑c ƒë·ªãnh v√†o dropdown
              addOption(selectMon, "Kh√¥ng c√≥ d·ªØ li·ªáu", "");
            } else {
              // N·∫øu c√≥ d·ªØ li·ªáu t·ª´ server, th√™m c√°c option t·ª´ d·ªØ li·ªáu v√†o dropdown
              data.list.forEach((mon) => {
                addOption(selectMon, mon.tenMon, mon._id);
              });
            }
          })
          .catch((error) => console.error("Error:", error));
      }

      // G·ªçi function ƒë·ªÉ populate dropdown khi trang ƒë∆∞·ª£c load
      window.addEventListener("load", function () {
        // L·∫•y gi√° tr·ªã ban ƒë·∫ßu c·ªßa dropdown (n·∫øu c·∫ßn)
        var selectedValue = document.getElementById("selectStore").value;
        // Populate dropdown v·ªõi gi√° tr·ªã ban ƒë·∫ßu
        populateDropdown(selectedValue);
      });

      // Th√™m s·ª± ki·ªán change cho dropdown "selectStore"
      document
