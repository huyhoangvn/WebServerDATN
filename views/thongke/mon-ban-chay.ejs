    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->
        <!-- Bắt đầu filter -->
        <form action="/thong-ke/mon-ban-chay-filter" method="GET">

          <!-- tìm theo tên loại món, theo ngày-->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-3">
              <input type="text" class="form-control" name="tenMon" placeholder="Nhập tên món để tìm kiếm">
            </div>

            <div class="col-3">
              <select class="form-control" name="tenLM">
                <option value="">Tất cả lọai món</option>
                <% for (var i=0; i<AllLoaiMon.length; i++) {%>
                  <option value="<%=AllLoaiMon[i].tenLM%>">
                    <%=AllLoaiMon[i].tenLM%>
                  </option>
                  <%}%>
              </select>
            </div>

            <div class="col-2">
              <select class="form-control" name="thang" id="thangSelect">
                <option value="">Tháng</option>
                <% for (var i=1; i <=12; i++) { %>
                  <% if (currentMonth && currentMonth==i) { %>
                    <option value="<%= i %>" selected>Tháng <%= i %>
                    </option>
                    <% } else { %>
                      <option value="<%= i %>">Tháng <%= i %>
                      </option>
                      <% } %>
                        <% } %>
              </select>
            </div>


            <div class="input-group col-2">
              <input type="text" class="form-control" value="<%=currentYear%>" name="nam" id="yearPicker"
                placeholder="Chọn năm" autocomplete="off">
            </div>

            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
          </div>
        </form>
        <!-- Kết thúc filter -->

        <!-- Bắt đầu bảng -->
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tên món</td>
              <td scope="col-1">Giá tiền</td>
              <td scope="col-1">Loại món</td>
              <td scope="col-8">Doanh thu</td>
              <td scope="col-8">Chức năng</td>
            </tr>
          </thead>
          <tbody>
            <%if(!!locals.monBanChay){%>
              <% for (var i=0; i<monBanChay.length; i++) {%>
                <tr>
                  <td scope="col-1">
                    <%=i+1%>
                  </td>
                  <td scope="col-2">
                    <%=monBanChay[i].tenMon%>
                  </td>
                  <td scope="col-1">
                    <%=monBanChay[i].giaTien.toLocaleString()%>đ
                  </td>
                  <td scope="col-1">
                    <%=monBanChay[i].tenLM%>
                  </td>
                  <td scope="col-8">
                    <%=monBanChay[i].doanhThu.toLocaleString()%>đ
                  </td>
                  <td class="text-primary" scope="col-1">
                    <a href="/mon/chi-tiet/<%=monBanChay[i]._id%>">Chi tiết</a>
                  </td>
                </tr>
                <%}%>
                  <%}else{%>
                    <tr>
                      <td scope="col-1">0</td>
                      <td scope="col-2">0</td>
                      <td scope="col-9">0</td>
                      <td scope="col-9">0</td>
                      <td scope="col-9">0</td>
                      <td scope="col-9">0</td>
                    </tr>
                    <%}%>

          </tbody>
        </table>
        <!--kết thúc bảng -->

        <!-- Phân trang hiển thị-->
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% for (var i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?trang=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
