    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->
<!-- Bắt đầu filter -->
        <form action="/thong-ke/mon-ban-chay" method="GET">
          <!-- tìm theo tên món  -->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-12">
              <input type="text" id="searchMon" class="form-control" name="tenMon"
                placeholder="Nhập tên món để tìm kiếm">
            </div>
          </div>

          <!-- tìm theo tên loại món, theo ngày-->
          <div class="d-flex row justify-content-between mb-1">

            <!-- <div class="col-3">
              <select class="form-control" name="tenLM">
                <option value="">Tất cả lọai món</option>
                <% for (var i = 0; i<AllLoaiMon.length; i++) {%>
                  <option value="<%=AllLoaiMon[i].tenLM%>"><%=AllLoaiMon[i].tenLM%></option>
                <%}%>
              </select>
            </div> -->

            <div class="col-3">
              <select class="form-control" name="thang" id="thangSelect">
                  <option value="">Tháng</option>
                  <% for (var i = 1; i <= 12; i++) { %>
                      <% if (i === currentMonth) { %>
                          <option value="<%= i %>" selected>Tháng <%= i %></option>
                      <% } else { %>
                          <option value="<%= i %>">Tháng <%= i %></option>
                      <% } %>
                  <% } %>
              </select>
            </div>

            <div class="col-3">
              <select class="form-control" name="thang">
                <option value="">Tháng</option>
                <% for (var i = 0; i<12; i++) {%>
                  <option value="<%=i+1%>">tháng <%=i+1%></option>
                <%}%>
              </select>
            </div>

            <div class="input-group col-3">
              <input type="text" class="form-control" id="yearPicker" placeholder="Chọn năm" autocomplete="off">
            </div>

            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
          </div>
        </form>
<!-- Kết thúc filter -->

<!-- Bắt đầu bảng -->
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tên món</td>
              <td scope="col-9">Loại món</td>
              <td scope="col-9">Doanh thu</td>
            </tr>
          </thead>
          <tbody>
            <%if(!!locals.monBanChay){%>
              <% for (var i = 0; i<monBanChay.length; i++) {%>
                <tr>
                  <td scope="col-1"><%=i+1%></td>
                  <td scope="col-2" ><%=monBanChay[i].tenMon%></td>
                  <td scope="col-9" ><%=monBanChay[i].tenLoaiMon%></td>
                  <td scope="col-9" ><%=monBanChay[i].doanhThu%></td>
                </tr>
                <%}%>
            <%}else{%>
              <tr>
                <td scope="col-1">0</td>
                <td scope="col-2">0</td>
                <td scope="col-9">0</td>
              </tr>
            <%}%>
            
        </tbody> 
        </table>
<!--kết thúc bảng -->
