  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      })
    });


     // Khởi tạo datepicker chỉ hiển thị năm
     $(document).ready(function(){
      $('#yearPicker').datepicker({
        format: "yyyy",
        viewMode: "years",
        minViewMode: "years",
        autoclose: true,
        clearBtn: true
      });

      // Xử lý sự kiện khi nút "Xóa" được nhấn
      $('#clearBtn').click(function(){
        $('#yearPicker').val('');
      });
      });

      // Lấy tháng hiện tại
      var currentMonth = new Date().getMonth() + 1; // Lấy tháng từ 1 đến 12

      // Cập nhật dropdown chọn tháng
      document.getElementById("thangSelect").value = currentMonth.toString();
  </script>
