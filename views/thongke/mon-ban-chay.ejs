  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      })
    });


    // Khởi tạo datepicker chỉ hiển thị năm
    $(document).ready(function () {
      $('#yearPicker').datepicker({
        format: "yyyy",
        viewMode: "years",
        minViewMode: "years",
        autoclose: true,
        clearBtn: true
      });

      // Xử lý sự kiện khi nút "Xóa" được nhấn
      $('#clearBtn').click(function () {
        $('#yearPicker').val('');
      });
    });
    function getUrlParameter(name) {
      name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
      var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
      var results = regex.exec(location.search);
      return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
    }

    function fillFormFieldsFromURL() {
      var tenMon = getUrlParameter('tenMon') || '';
      var tenLM = document.querySelector('select[name="tenLM"]').value;
      var thang = document.querySelector('select[name="thang"]').value;
      var nam = document.querySelector('input[name="nam"]').value;

      document.querySelector('input[name="tenMon"]').value = tenMon;
    }


    window.onload = function () {
      fillFormFieldsFromURL()
      // Lấy URL hiện tại
      var currentUrl = window.location.href;

      // Phân tích các tham số truy vấn từ URL
      var urlParams = new URLSearchParams(currentUrl.split('?')[1]);

      // Lấy giá trị của các tham số từ URL
      var selectedLM = urlParams.get('tenLM');
      var selectedMonth = urlParams.get('thang');
      var selectedYear = urlParams.get('nam');

      // Gán giá trị của các tham số cho các trường trong biểu mẫu
      if (selectedLM) {
        document.querySelector('select[name="tenLM"]').value = selectedLM;
      }
      if (selectedMonth) {
        document.querySelector('select[name="thang"]').value = selectedMonth;
      }
      if (selectedYear) {
        document.querySelector('input[name="nam"]').value = selectedYear;
      }

      // Đánh dấu trang đã được tải lại từ tìm kiếm
      localStorage.setItem('isReloaded', 'true');
    };


    



  </script>
