  <!-- <h1><%= (!!locals.title)?title:'' %></h1> -->

  <div class="content-wrapper bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Thống Kê Doanh Thu</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Thống kê</a></li>
              <li class="breadcrumb-item active">Doanh thu</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->
        <label for="" class="m-0">Thống kê doanh thu theo khoảng ngày </label>
        <br>
        <form action="/thong-ke/doanh-thu/ngay-to-ngay" method="GET">
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-5">
              <input type="date" class="form-control" name="ngayBatDau" id="ngayBatDau" placeholder="Ngày bắt đầu">
            </div>

            <div class="col-5">
              <input type="date" class="form-control" name="ngayKetThuc" id="ngayHetHan" placeholder="Ngày kết thúc">
            </div>
            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit" id="thongKe">Thống kê</button>
            </div>
          </div>

        </form>

        <div class="bg-light rounded text-center mb-1">
          <div>
            <% if (ngayBatDau !=="" || ngayKetThuc !=="" ) { %>
              <p>Doanh thu từ <%= ngayBatDau%> đến <%= ngayKetThuc%>
              </p>
              <p class="fw-bold">
                <%= ngayToNgay.toLocaleString() %>đ
              </p>
              <% } else { %>
                <p>Nhập ngày để thống kê</p>
                <p class="fw-bold">
                  0đ
                </p>
                <% } %>
          </div>
        </div>


        <!-- bắt đầu doanh thu 3 ô -->
        <div class="row justify-content-between mb-1">
          <div class="col-3 bg-primary rounded pt-3 pb-2 text-center">
            <div>
              <p>Doanh thu trong 1 ngày</p>
              <p class="fw-bold">
                <%=tongTienMotNgay.toLocaleString()%>đ
              </p>
            </div>
          </div>
          <div class="col-3 bg-success rounded pt-3 pb-2 text-center">
            <div>
              <p>Doanh thu trong 10 ngày</p>
              <p class="fw-bold">
                <%=tongTienMuoiNgay.toLocaleString()%>đ
              </p>
            </div>
          </div>
          <div class="col-3 bg-info rounded pt-3 pb-2 text-center">
            <div>
              <p class="text-white">Doanh thu trong 30 ngày</p>
              <p class="fw-bold text-white">
                <%=tongTienBaMuoiNgay.toLocaleString()%>đ
              </p>
            </div>
          </div>
        </div>
        <!-- kết thúc doanh thu 3 ô -->


        <!-- bắt đầu filter -->
        <label for="" class="m-0">Thống kê doanh thu theo tháng của năm </label>
        <br>
        <form action="/thong-ke/doanh-thu/theo-nam" method="GET">
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-10">
              <input type="text" class="form-control" value="" name="nam" placeholder="Nhập năm để thống kê ">
            </div>
            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit" id="thongKe">Thống kê</button>
            </div>
          </div>

        </form>
        <!-- kết thúc filter -->

        <!-- bắt đầu biểu đồ -->
        <label for="" class="font-weight-normal">biểu đồ cột doanh thu theo năm <%=nam%> </label>
        <br>
        <label for="" class="font-weight-normal">Tổng doanh thu năm <%=nam%> </label>
        <label for="">
          <%=tongTienNam.toLocaleString()%>đ
        </label>
        <br>
        <div class="row">
          <div class="col">
            <canvas id="myChart"></canvas>
          </div>
        </div>
        <!-- kết thúc biểu đồ -->

        <!-- Bắt đàu bảng -->
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tháng</td>
              <td scope="col-9">Doanh thu</td>
            </tr>
          </thead>
          <tbody>
            <%if(!!locals.cacThang){%>
              <% for (var i=0; i<cacThang.length; i++) {%>
                <tr>
                  <td scope="col-1">
                    <%=i+1%>
                  </td>
                  <td scope="col-2" data-month="<%=i+1%>">
                    <%=i+1%>
                  </td>
                  <td scope="col-9" data-revenue="<%=cacThang[i].tong%>">
                    <%=cacThang[i].tong.toLocaleString()%>đ
                  </td>
                </tr>
                <%}%>
                  <%}else{%>
                    <tr>
                      <td scope="col-1">0</td>
                      <td scope="col-2">0</td>
                      <td scope="col-9">0đ</td>
                    </tr>
                    <%}%>

          </tbody>
        </table>
        <!-- Kết thúc bảng -->
      </div>
    </section>
  </div>

  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    );

    // Lấy tất cả các ô trong cột Tháng và Doanh thu từ bảng
    const monthCells = document.querySelectorAll('td[data-month]');
    const revenueCells = document.querySelectorAll('td[data-revenue]');

    // Khởi tạo mảng lưu trữ dữ liệu tháng và doanh thu
    const months = [];
    const revenues = [];

    // Lặp qua tất cả các ô trong cột Tháng và Doanh thu để lấy dữ liệu
    monthCells.forEach(cell => {
      const month = parseInt(cell.dataset.month);
      months.push(month);
    });

    revenueCells.forEach(cell => {
      const revenue = parseInt(cell.dataset.revenue);
      revenues.push(revenue);
    });

    // Dữ liệu biểu đồ
    const data = {
      labels: months.map(month => 'Tháng ' + month),
      datasets: [{
        label: 'Doanh thu',
        data: revenues,
        backgroundColor: '#17A2B8',
        borderColor: '#17A2B8',
        borderWidth: 1
      }]
    };

    // Vẽ biểu đồ
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'bar',
      data: data,
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });


  </script>
</body>

</html>