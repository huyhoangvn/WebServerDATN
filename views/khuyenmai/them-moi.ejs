      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>
  <!-- <h1><%= (!!locals.title)?title:'' %></h1> -->

  <div class="content-wrapper bg-white" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <span class="h2"><a href="/cua-hang/danh-sach" class="fas fa-arrow-left"
                style="color: black; text-decoration: none;">
              </a><span style="margin-left: 20px;">Thêm Mới Khuyến Mãi</span> </span>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Khuyến mãi</a></li>
              <li class="breadcrumb-item active">Thêm mới</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->


        <form action="/khuyen-mai/ADD" method="post">
          <h5 class="py-2">Nhập thông tin khuyến mãi</h5>
          <div class="form-group">
            <label class="form-label">Tiêu đề</label>
            <input type="text" class="form-control" id="tieuDe" name="tieuDe" placeholder="Nhập Tiêu Đề ">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Ngày bắt đầu</label>
            <input type="date" class="form-control" name="ngayBatDau" id="ngayBatDau" placeholder="Ngày bắt đầu">
          </div>
          <div class="mb-3">
            <label for="" class="form-label">Ngày hết hạn</label>
            <input type="date" class="form-control" name="ngayHetHan" id="ngayHetHan" placeholder="Ngày hết hạn">
          </div>
          <div class="form-group">
            <label class="form-label">Phần trăm khuyến mãi</label>
            <input type="text" class="form-control" name="phanTramKhuyenMai" id="phanTramKhuyenMai"
              placeholder="Nhập Phần trăm khuyến mãi">
          </div>
          <div class="form-group">
            <label class="form-label">Đơn tối thiểu</label>
            <input type="text" class="form-control" name="donToiThieu" id="donToiThieu"
              placeholder="Nhập Đơn tối thiểu">
          </div>

          <% if(typeof error==="string" && !(error.trim().length===0)){%>
            <span class="text-danger">
              <%= error %>
            </span>
            <%}%>
              <div class="col text-center">
                <button type="submit" class="btn btn-default btn-dark">Thêm khuyến mãi</button>
              </div>

        </form>


      </div>
    </section>
  </div>

  <!-- Scripts -->
  <script type="text/javascript">
    let myidtoinsert = window.location.toString();
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )

  </script>
</body>

</html>