  <div class="content-wrapper" style="min-height: 100vh; max-height: 100vh; overflow-y: auto;">
    <div class="content-header border border-bottom-1">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Khuyến mãi</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Khuyến mãi</a></li>
              <li class="breadcrumb-item active">Danh sách</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>

    <section class="content">
      <div class="container-fluid bg-white m-2">

        <!-- Main content nằm ở dây -->

        <form action="/khuyen-mai/danh-sach">
          <!-- Main content nằm ở dây -->
          <div class="d-flex row justify-content-between mb-1">
            <div class="col-4">
              <input type="text" id="searchTieuDe" class="form-control" name="tieuDe"
                placeholder="Nhập tiêu đề để tìm kiếm">
            </div>

            <div class="mb-3">
              <input type="date" class="form-control" name="ngayBatDau" id="ngayBatDau" placeholder="Ngày bắt đầu">
            </div>

            <div class="mb-3">
              <input type="date" class="form-control" name="ngayHetHan" id="ngayHetHan" placeholder="Ngày hết hạn">
            </div>
            <div class="col-2">
              <select class="form-control" name="trangThai">
                <option value="-1">Tất cả trạng thái</option>
                <option value="1">Hoạt động</option>
                <option value="0">Khóa</option>
              </select>
            </div>

            <div class="col-2">
              <button class="btn btn-dark w-100" type="submit">Tìm kiếm</button>
            </div>
          </div>

        </form>

        <!-- Bảng hiển thị -->
        <%if(soLuongKhuyenMai == undefined){%>
          <label for="">Đã tìm thấy 0 kết quả</label>
        <%}else{%>
          <label for="">Đã tìm thấy <%=soLuongKhuyenMai%> kết quả</label>
        <%}%>
        <table class="table table-bordered border-secondary">
          <thead>
            <tr class="table-secondary">
              <td scope="col-1">STT</td>
              <td scope="col-2">Tiêu Đề </td>
              <td scope="col-2">Ngày Bắt Đầu</td>
              <td scope="col-2">Ngày Kết Thúc</td>
              <td scope="col-2">Sửa</td>
              <td scope="col-2">Trạng Thái</td>
              <td scope="col-1">Chức năng</td>
            </tr>
          </thead>
          <tbody>
            <% for (var i=0; i<data.length; i++) {%>
              <tr>
                <td scope="col-1">
                  <%=i+1%>
                </td>
                <td scope="col-2">
                  <%=data[i].tieuDe%>
                </td>
                <td scope="col-2">
                  <% var startDate=new Date(data[i].ngayBatDau); %>
                    <%= ("0" + startDate.getDate()).slice(-2) %>/<%= ("0" + (startDate.getMonth() + 1)).slice(-2) %>/<%=
                          startDate.getFullYear() %>
                </td>
                <td scope="col-2">
                  <% var endDate=new Date(data[i].ngayHetHan); %>
                    <%= ("0" + endDate.getDate()).slice(-2) %>/<%= ("0" + (endDate.getMonth() + 1)).slice(-2) %>/<%=
                          endDate.getFullYear() %>
                </td>
                <td class="text-primary" scope="col-1">
                  <a data-toggle="modal" data-target="#suaKhuyenMaiModal" data-idkm="<%=data[i]._id%>"
                    data-tieude="<%=data[i].tieuDe%>" data-makhuyenmai="<%=data[i].maKhuyenMai%>"
                    data-ngaybatdau="<%=data[i].ngayBatDau%>" data-ngayhethan="<%=data[i].ngayHetHan%>"
                    data-phantramkhuyenmai="<%=data[i].phanTramKhuyenMai%>" data-dontoithieu="<%=data[i].donToiThieu%>"
                    data-trangthai="<%=data[i].trangThai%>">
                    Sửa </a>
                </td>

                <td class="text-primary scope-col-2">
                  <a data-toggle="modal" data-target="#suaTrangThaiModal"
                    class=" <%= data[i].trangThai ? 'text-success' : 'text-danger' %>" data-idkm="<%=data[i]._id%>"
                    data-trangthai="<%=data[i].trangThai%>">
                    <%= data[i].trangThai ? 'Hoạt động' : 'Khóa' %>
                  </a>
                </td>

                <td class="text-primary" scope="col-1">
                  <a data-toggle="modal" data-target="#exampleModal" data-tieude="<%=data[i].tieuDe%>"
                    data-makhuyenmai="<%=data[i].maKhuyenMai%>" data-ngaybatdau="<%=data[i].ngayBatDau%>"
                    data-ngayhethan="<%=data[i].ngayHetHan%>" data-phantramkhuyenmai="<%=data[i].phanTramKhuyenMai%>"
                    data-dontoithieu="<%=data[i].donToiThieu%>" data-trangthai="<%=data[i].trangThai%>">
                    Chi tiết</a>
                </td>
              </tr>
              <%}%>
          </tbody>
        </table>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Chi tiết khuyến mãi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-12">
                    <h4 id="tieude"></h4>
                    <p><strong>Mã Khuyến Mãi:</strong> <span id="makhuyenmai"></span></p>
                    <p><strong>Ngày bắt đầu:</strong> <span id="ngaybatdau"></span></p>
                    <p><strong>Ngày kết thúc:</strong> <span id="ngayhethan"></span></p>
                    <p><strong>Phần trăm khuyến mãi:</strong> <span id="phantramkhuyenmai"></span></p>
                    <p><strong>Đơn tối thiểu:</strong> <span id="dontoithieu"></span></p>
                    <p><strong>Trạng thái:</strong> <span id="trangthai"></span></p>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
              </div>
            </div>
          </div>
        </div>


        <!-- Modal Sửa Khuyến Mãi -->
        <div class="modal fade" id="suaKhuyenMaiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa Khuyến Mãi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formSuaKhuyenMai" method="post" action="/khuyen-mai/sua/">
                  <div class="form-group">
                    <label for="tieuDe">Tiêu đề</label>
                    <input type="text" class="form-control" name="tieuDe" id="tieuDe" placeholder="Tiêu đề">
                  </div>
                  <div class="form-group">
                    <label for="ngayBatDau">Ngày bắt đầu</label>
                    <input type="date" class="form-control" name="ngayBatDau" id="ngayBatDau"
                      placeholder="Ngày bắt đầu">
                  </div>
                  <div class="form-group">
                    <label for="ngayHetHan">Ngày kết thúc</label>
                    <input type="date" class="form-control" name="ngayHetHan" id="ngayHetHan"
                      placeholder="Ngày kết thúc">
                  </div>
                  <div class="form-group">
                    <label for="phanTramKhuyenMai">Phần trăm khuyến mãi</label>
                    <input type="text" class="form-control" name="phanTramKhuyenMai" id="phanTramKhuyenMai"
                      placeholder="Phần trăm khuyến mãi">
                  </div>
                  <div class="form-group">
                    <label for="donToiThieu">Đơn tối thiểu</label>
                    <input type="text" class="form-control" name="donToiThieu" id="donToiThieu"
                      placeholder="Đơn tối thiểu">
                  </div>
                  <input type="hidden" class="form-control" name="idKM" id="idKM">
                  <br>
                  <button type="submit" class="btn btn-primary">Lưu</button>
                </form>
              </div>
            </div>
          </div>
        </div>


        <!-- Modal Sửa Trạng Thái -->
        <div class="modal fade" id="suaTrangThaiModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Sửa Trạng Thái</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="formSuaTrangThai" action="/khuyen-mai/xoa" method="post">
                  <div class="form-group">
                    <label for="trangThai">bạn có muốn sửa trạng thái không</label>
                  </div>
                  <input type="hidden" class="form-control" name="idKM" id="idKM">
                  <br>
                  <button type="submit" class="btn btn-primary">Sửa</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <nav aria-label=" Page navigation">
          <ul class="pagination justify-content-center">
            <% for (var i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?trang=<%= i %>">
                  <%= i %>
                </a>
              </li>
              <% } %>
          </ul>
        </nav>


      </div>
    </section>
  </div>

  <!-- Button trigger modal -->

  <!-- Scripts -->
  <script type="text/javascript">
    $(document).ready(function () {
      $(".open").click(function (e) {
        e.stopPropagation()
        e.preventDefault()
        $(this).parent().toggleClass('menu-open');
      }
      )
    }
    )
    function convertTrangThai(trangThai) {
      if (trangThai === true) {
        return "Hoạt động";
      } else {
        return "Khóa";
      }
    }


    // chi tiết
    $(document).ready(function () {
      $('a[data-target="#exampleModal"]').on('click', function () {
        var tieude = $(this).data('tieude');
        var makhuyenmai = $(this).data('makhuyenmai');
        var ngaybatdau = moment($(this).data('ngaybatdau')).format('DD/MM/YYYY'); // Format ngày bắt đầu
        var ngayhethan = moment($(this).data('ngayhethan')).format('DD/MM/YYYY');
        var phantramkhuyenmai = $(this).data('phantramkhuyenmai');
        var dontoithieu = $(this).data('dontoithieu');
        var trangthai = $(this).data('trangthai');

        var trangThaiText = convertTrangThai(trangthai);

        $('#exampleModal').find('#tieude').text(tieude);
        $('#exampleModal').find('#makhuyenmai').text(makhuyenmai);
        $('#exampleModal').find('#ngaybatdau').text(ngaybatdau);
        $('#exampleModal').find('#ngayhethan').text(ngayhethan);
        $('#exampleModal').find('#phantramkhuyenmai').text(phantramkhuyenmai);
        $('#exampleModal').find('#dontoithieu').text(dontoithieu);
        $('#exampleModal').find('#trangthai').text(trangThaiText);
      });
    });

    $(document).ready(function () {
      // Khi nút "Sửa" được nhấp
      $('a[data-target="#suaKhuyenMaiModal"]').on('click', function () {

        var idKM = $(this).data('idkm');
        var tieuDe = $(this).data('tieude');
        // var ngayBatDau = $(this).data('ngaybatdau');
        // var ngayHetHan = $(this).data('ngayhethan');
        var phanTramKhuyenMai = $(this).data('phantramkhuyenmai');
        var donToiThieu = $(this).data('dontoithieu');

        // Thiết lập value cho từng trường input
        $('#tieuDe').val(tieuDe);
        // $('#ngayBatDau').val(ngayBatDau);
        // $('#ngayHetHan').val(ngayHetHan);
        $('#phanTramKhuyenMai').val(phanTramKhuyenMai);
        $('#donToiThieu').val(donToiThieu);
        $('#idKM').val(idKM);



        $('#formSuaKhuyenMai').attr('action', '/khuyen-mai/sua/' + idKM);
      });
    });

    // sửa trạng thái
    $(document).ready(function () {
      $('a[data-target="#suaTrangThaiModal"]').on('click', function () {

        var idKM = $(this).data('idkm');

        $('#idKM').val(idKM);

        $('#formSuaTrangThai').attr('action', '/khuyen-mai/xoa/' + idKM);
      });
    });

    // Lưu trạng thái của các trường dữ liệu đã chọn vào session khi nhấn nút tìm kiếm
$(document).ready(function() {
    $('form[action="/khuyen-mai/danh-sach"]').submit(function(event) {
        var tieuDe = $('#searchTieuDe').val();
        var ngayBatDau = $('#ngayBatDau').val();
        var ngayHetHan = $('#ngayHetHan').val();
        var trangThai = $('#trangThai').val();

        // Lưu các giá trị vào session
        sessionStorage.setItem('tieuDe', tieuDe);
        sessionStorage.setItem('ngayBatDau', ngayBatDau);
        sessionStorage.setItem('ngayHetHan', ngayHetHan);
        sessionStorage.setItem('trangThai', trangThai);
    });
});

// Kiểm tra và đặt lại giá trị cho các trường dữ liệu khi trang được load lại
$(document).ready(function() {
    var tieuDe = sessionStorage.getItem('tieuDe');
    var ngayBatDau = sessionStorage.getItem('ngayBatDau');
    var ngayHetHan = sessionStorage.getItem('ngayHetHan');
    var trangThai = sessionStorage.getItem('trangThai');

    // Đặt giá trị cho các trường dữ liệu nếu đã được lưu trước đó
    if (tieuDe) $('#searchTieuDe').val(tieuDe);
    if (ngayBatDau) $('#ngayBatDau').val(ngayBatDau);
    if (ngayHetHan) $('#ngayHetHan').val(ngayHetHan);
    if (trangThai) $('#trangThai').val(trangThai);
});

  </script>

</body>

